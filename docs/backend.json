{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Stores user profile information such as name, avatar, and preferences.",
      "properties": {
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "avatar": {
          "type": "string",
          "description": "URL or path to the user's avatar image.",
          "format": "uri"
        },
        "preferences": {
          "type": "string",
          "description": "User's preferences, stored as a serialized JSON string."
        },
        "walletAddresses": {
          "type": "array",
          "description": "Array of user's associated wallet addresses.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name"
      ]
    },
    "UserSettings": {
      "title": "User Settings",
      "type": "object",
      "description": "Stores user-specific settings like theme, language, and notification preferences.",
      "properties": {
        "theme": {
          "type": "string",
          "description": "User's preferred theme (e.g., light, dark).",
          "enum": [
            "light",
            "dark",
            "system"
          ]
        },
        "language": {
          "type": "string",
          "description": "User's preferred language."
        },
        "notifications": {
          "type": "object",
          "properties": {
            "transactions": {
              "type": "boolean"
            },
            "alerts": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "Transaction": {
      "title": "Transaction",
      "type": "object",
      "description": "Represents a blockchain transaction.",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "fromAddress": {
          "type": "string"
        },
        "toAddress": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "confirmed",
            "failed"
          ]
        },
        "blockchainConfirmation": {
          "type": "string"
        }
      },
      "required": [
        "timestamp",
        "fromAddress",
        "toAddress",
        "amount",
        "status"
      ]
    },
    "Notification": {
      "title": "Notification",
      "type": "object",
      "description": "Represents a user notification.",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "transaction",
            "alert"
          ]
        },
        "message": {
          "type": "string"
        },
        "read": {
          "type": "boolean"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "type",
        "message",
        "read",
        "timestamp"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com",
      "siwe",
      "github.com"
    ]
  },
  "firestore": {
    "/users/{userId}/profile": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores the profile for a single user."
    },
    "/users/{userId}/settings": {
      "schema": {
        "$ref": "#/entities/UserSettings"
      },
      "description": "Stores settings for a single user."
    },
    "/transactions/{userId}/{transactionId}": {
      "schema": {
        "$ref": "#/entities/Transaction"
      },
      "description": "Stores a single transaction for a user."
    },
    "/notifications/{userId}/{notificationId}": {
      "schema": {
        "$ref": "#/entities/Notification"
      },
      "description": "Stores a single notification for a user."
    }
  }
}